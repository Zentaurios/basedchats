# Shared/OnchainKit variables
NEXT_PUBLIC_URL=http://localhost:3000
NEXT_PUBLIC_ONCHAINKIT_PROJECT_NAME=BasedChats
NEXT_PUBLIC_ICON_URL=$NEXT_PUBLIC_URL/images/icon.svg
NEXT_PUBLIC_ONCHAINKIT_API_KEY=your_onchainkit_api_key_here

# Neynar API for cast lookup
NEYNAR_API_KEY=your_neynar_api_key_here

# Frame metadata
FARCASTER_HEADER=
FARCASTER_PAYLOAD=
FARCASTER_SIGNATURE=
NEXT_PUBLIC_APP_ICON=$NEXT_PUBLIC_URL/images/icon.svg

# Base App metadata for discovery
NEXT_PUBLIC_APP_SUBTITLE=Find Group Chats on the Base App
NEXT_PUBLIC_APP_DESCRIPTION=Connect with builders, creators, and innovators in group chats on the Base ecosystem. Discover active communities and join conversations that matter.
NEXT_PUBLIC_APP_SPLASH_IMAGE=$NEXT_PUBLIC_URL/images/splash.svg
NEXT_PUBLIC_SPLASH_BACKGROUND_COLOR="#ffffff"
NEXT_PUBLIC_APP_PRIMARY_CATEGORY=social
# NEXT_PUBLIC_APP_HERO_IMAGE - You'll create this yourself
NEXT_PUBLIC_APP_TAGLINE=Connect. Share. Build together.
NEXT_PUBLIC_APP_OG_TITLE=BasedChats - Group Chats on Base
NEXT_PUBLIC_APP_OG_DESCRIPTION=Join group conversations with builders, creators, and innovators on the Base ecosystem. Discover active communities today.
# NEXT_PUBLIC_APP_OG_IMAGE - You'll create this yourself

# Redis config
REDIS_URL=your_redis_url_here
REDIS_TOKEN=your_redis_token_here

# Admin Authentication
# Comma-separated list of authorized admin wallet addresses
ADMIN_ADDRESSES=0x1234567890123456789012345678901234567890,0x1234567890123456789012345678901234567891
# Version string - increment when admin addresses change to invalidate existing sessions
ADMIN_ADDRESSES_VERSION=v1.0
